

object Weapon {
    var grp;    //무기그래픽
    var action; //공격방식
    var bullet; //투사체수
    var splash; //스플래시 0:없음, 1↑:스플범위값
    var icon;   //무기아이콘
};

const weaponList    = EUDArray(50);

function weaponInit(){
    for(var i=0; i<weaponList._arrlen; i++){
        weaponList[i] = Weapon.alloc(); //Weapon 오브젝트 할당
    }
    //마린무기
    const wp0 = Weapon.cast(weaponList[0]);
    wp0.grp = 142;
    wp0.action = 2;
    wp0.bullet = 1;
    wp0.splash = 0;
    wp0.icon = 323;
}